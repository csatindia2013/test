# Production Environment Variables for EasyBill Admin Dashboard
# Copy this file to .env and update the values for your production environment

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Security Settings
SESSION_COOKIE_SECURE=true
WTF_CSRF_ENABLED=true

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# Authentication Settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your-admin-password-hash
USER1_USERNAME=user1
USER1_PASSWORD_HASH=your-user1-password-hash

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/0
RATELIMIT_DEFAULT=1000 per hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Background Processing
BACKGROUND_PROCESSOR_ENABLED=true
BACKGROUND_PROCESSOR_INTERVAL=3600

# CORS Settings (comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Server Configuration
PORT=5000
HOST=0.0.0.0
